{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "paths": {
      "@openeagle/mobile": ["src/index"],
      "@openeagle/mobile/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "examples/**/*.d.ts",
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "examples/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
